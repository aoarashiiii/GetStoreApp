<Page
    x:Class="GetStoreApp.Views.Pages.QueryLinksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:backdrophelper="using:GetStoreApp.Helpers.Backdrop"
    xmlns:converter="using:GetStoreApp.Helpers.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:GetStoreApp.Models"
    xmlns:rootservice="using:GetStoreApp.Services.Root"
    x:Name="QueryLinksRoot"
    Padding="0,0,0,30"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="ExpanderChevronBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderChevronPointerOverBackground" Color="Transparent" />
        <SolidColorBrush x:Key="ExpanderChevronPressedBackground" Color="Transparent" />
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="HyperlinkButtonBackgroundPressed" Color="Transparent" />

        <XamlUICommand x:Name="FillinCommand" ExecuteRequested="{x:Bind OnFillinExecuteRequested}" />
        <XamlUICommand x:Name="DownloadCommand" ExecuteRequested="{x:Bind OnDownloadExecuteRequested}" />
        <XamlUICommand x:Name="OpenLinkCommand" ExecuteRequested="{x:Bind OnOpenLinkExecuteRequested}" />
        <XamlUICommand x:Name="CopyLinkCommand" ExecuteRequested="{x:Bind OnCopyLinkExecuteRequested}" />
        <XamlUICommand x:Name="CopyInformationCommand" ExecuteRequested="{x:Bind OnCopyInformationExecuteRequested}" />
    </Page.Resources>

    <ScrollViewer
        Padding="30,0,30,0"
        HorizontalScrollBarVisibility="Disabled"
        HorizontalScrollMode="Disabled"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Enabled">

        <Grid Margin="0,0,0,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  查询链接控制栏  -->
            <Grid
                Grid.Row="0"
                Margin="0,0,1,3"
                ColumnSpacing="6">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <DropDownButton
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="{x:Bind SelectedType.DisplayName, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnTypeSelectClicked}"
                                GroupName="TypeRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedType.InternalName, TypeList[0].InternalName), Mode=OneWay}"
                                Tag="{x:Bind TypeList[0]}"
                                Text="{x:Bind TypeList[0].DisplayName}" />

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnTypeSelectClicked}"
                                GroupName="TypeRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedType.InternalName, TypeList[1].InternalName), Mode=OneWay}"
                                Tag="{x:Bind TypeList[1]}"
                                Text="{x:Bind TypeList[1].DisplayName}" />
                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnTypeSelectClicked}"
                                GroupName="TypeRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedType.InternalName, TypeList[2].InternalName), Mode=OneWay}"
                                Tag="{x:Bind TypeList[2]}"
                                Text="{x:Bind TypeList[2].DisplayName}" />
                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnTypeSelectClicked}"
                                GroupName="TypeRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedType.InternalName, TypeList[3].InternalName), Mode=OneWay}"
                                Tag="{x:Bind TypeList[3]}"
                                Text="{x:Bind TypeList[3].DisplayName}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <DropDownButton
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Content="{x:Bind SelectedChannel.DisplayName, Mode=OneWay}">

                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnChannelSelectClicked}"
                                GroupName="ChannelRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedChannel.InternalName, ChannelList[0].InternalName), Mode=OneWay}"
                                Tag="{x:Bind ChannelList[0]}"
                                Text="{x:Bind ChannelList[0].DisplayName}" />

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnChannelSelectClicked}"
                                GroupName="ChannelRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedChannel.InternalName, ChannelList[1].InternalName), Mode=OneWay}"
                                Tag="{x:Bind ChannelList[1]}"
                                Text="{x:Bind ChannelList[1].DisplayName}" />

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnChannelSelectClicked}"
                                GroupName="ChannelRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedChannel.InternalName, ChannelList[2].InternalName), Mode=OneWay}"
                                Tag="{x:Bind ChannelList[2]}"
                                Text="{x:Bind ChannelList[2].DisplayName}" />

                            <RadioMenuFlyoutItem
                                Click="{x:Bind OnChannelSelectClicked}"
                                GroupName="ChannelRadioGroup"
                                IsChecked="{x:Bind x:Object.Equals(SelectedChannel.InternalName, ChannelList[3].InternalName), Mode=OneWay}"
                                Tag="{x:Bind ChannelList[3]}"
                                Text="{x:Bind ChannelList[3].DisplayName}" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <TextBox
                    Grid.Column="2"
                    IsEnabled="{x:Bind IsQueryingLinks.Equals(x:False), Mode=OneWay}"
                    PlaceholderText="{x:Bind LinkPlaceHolderText, Mode=OneWay}"
                    Text="{x:Bind LinkText, Mode=OneWay}"
                    TextChanged="{x:Bind OnTextChanged}" />

                <Button
                    Grid.Column="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Click="{x:Bind OnQueryLinksClicked}"
                    Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryLinks')}"
                    IsEnabled="{x:Bind IsQueryingLinks.Equals(x:False), Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" />
            </Grid>

            <!--  查询链接信息栏  -->
            <InfoBar
                Grid.Row="1"
                Height="50"
                Margin="0,0,0,3"
                IsClosable="False"
                IsOpen="True"
                Message="{x:Bind StateInfoText, Mode=OneWay}"
                Severity="{x:Bind ResultSeverity, Mode=OneWay}">

                <InfoBar.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Default">
                                <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="HighConstract">
                                <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="SystemColorWindowColorBrush" />
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <StaticResource x:Key="InfoBarInformationalSeverityBackgroundBrush" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </InfoBar.Resources>

                <InfoBar.ActionButton>
                    <Button
                        Margin="0"
                        Padding="0"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        IsHitTestVisible="False"
                        Visibility="{x:Bind IsRingActive, Mode=OneWay}">

                        <ProgressRing IsActive="{x:Bind IsRingActive, Mode=OneWay}" IsIndeterminate="True" />
                    </Button>
                </InfoBar.ActionButton>
            </InfoBar>

            <!--  查询链接历史记录  -->
            <Expander
                Grid.Row="2"
                Margin="0,0,0,3"
                Padding="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                IsExpanded="True">

                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <FontIcon
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            FontSize="16"
                            Glyph="&#xE823;" />

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Recent')}" />
                    </Grid>
                </Expander.Header>

                <Expander.Content>
                    <StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryEmpty')}"
                            TextAlignment="Center"
                            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(HistoryCollection.Count), Mode=OneWay}" />

                        <ListView
                            CornerRadius="0"
                            ItemsSource="{x:Bind HistoryCollection}"
                            SelectionMode="None"
                            Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(HistoryCollection.Count), Mode=OneWay}">

                            <ListView.ItemContainerStyle>
                                <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="MinHeight" Value="0" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ItemsControl.ItemContainerTransitions>
                                <TransitionCollection />
                            </ItemsControl.ItemContainerTransitions>

                            <ListView.Header>
                                <Grid Height="35" Padding="6,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="70" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        x:Name="HistoryAppNameHeaderText"
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryAppName')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Background="Transparent"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryAppName')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                Visibility="{x:Bind HistoryAppNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryTypeHeaderText"
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryType')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Background="Transparent"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryType')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                Visibility="{x:Bind HistoryTypeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryChannelHeaderText"
                                        Grid.Column="2"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryChannel')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Background="Transparent"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryChannel')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                Visibility="{x:Bind HistoryChannelHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        x:Name="HistoryLinkHeaderText"
                                        Grid.Column="3"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryLink')}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Background="Transparent"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/HistoryLink')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                Visibility="{x:Bind HistoryLinkHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Column="4"
                                        Grid.ColumnSpan="2"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Options')}">

                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                MaxWidth="9999"
                                                Background="Transparent"
                                                Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/OptionsToolTip')}"
                                                Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </Grid>
                            </ListView.Header>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="model:HistoryModel">
                                    <Grid
                                        Height="35"
                                        Padding="6,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,1,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="70" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            x:Name="HistoryAppNameText"
                                            Grid.Column="0"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind HistoryAppName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind HistoryAppName}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=HistoryAppNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="HistoryTypeText"
                                            Grid.Column="1"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind HistoryTypeName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind HistoryTypeName}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=HistoryTypeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="HistoryChannelText"
                                            Grid.Column="2"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind HistoryChannelName}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind HistoryChannelName}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=HistoryChannelText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <TextBlock
                                            x:Name="HistoryLinkText"
                                            Grid.Column="3"
                                            MinWidth="50"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind HistoryLink}"
                                            TextAlignment="Left"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind HistoryLink}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=HistoryLinkText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>

                                        <HyperlinkButton
                                            Grid.Column="4"
                                            Margin="10,0,0,0"
                                            Padding="0"
                                            Command="{StaticResource FillinCommand}"
                                            CommandParameter="{x:Bind}"
                                            Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Fillin')}"
                                            IsEnabled="{x:Bind IsQuerying.Equals(x:False), Mode=OneWay}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Expander.Content>
            </Expander>

            <!--  查询链接结果  -->
            <Grid
                Grid.Row="3"
                CornerRadius="{ThemeResource ControlCornerRadius}"
                Visibility="{x:Bind ResultControlVisable, Mode=OneWay}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  查询链接结果信息栏  -->
                <Expander
                    Grid.Row="0"
                    Margin="0,0,0,3"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    IsExpanded="True"
                    Visibility="{x:Bind IsAppInfoVisible, Mode=OneWay}">

                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <FontIcon
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Glyph="&#xE946;" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,0,2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryedAppInfo')}" />

                            <CommandBar
                                Grid.Column="2"
                                Margin="0,0,-15,0"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                DefaultLabelPosition="Right">

                                <CommandBar.PrimaryCommands>
                                    <AppBarButton Click="{x:Bind OnCopyQueryedAppInfoClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyQueryedAppInfo')}">
                                        <AppBarButton.Icon>
                                            <FontIcon Glyph="&#xE8C8;" />
                                        </AppBarButton.Icon>
                                    </AppBarButton>

                                    <AppBarButton Click="{x:Bind OnLearnMoreClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/LearnMore')}">
                                        <AppBarButton.Icon>
                                            <FontIcon Glyph="&#xE890;" />
                                        </AppBarButton.Icon>
                                    </AppBarButton>
                                </CommandBar.PrimaryCommands>
                            </CommandBar>
                        </Grid>
                    </Expander.Header>

                    <Expander.Content>
                        <Grid Margin="0,0,10,0" RowSpacing="6">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryedAppName')}" />

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind AppInfo.Name, Mode=OneWay}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryedAppPublisher')}" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind AppInfo.Publisher, Mode=OneWay}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryedAppDescription')}" />

                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind AppInfo.Description, Mode=OneWay}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Expander.Content>
                </Expander>

                <!--  查询链接结果控制栏  -->
                <Grid
                    Grid.Row="1"
                    Height="60"
                    Padding="16,8,2,8"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <FontIcon
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        FontSize="16"
                        Glyph="&#xE71E;" />

                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryResult')}" />

                    <AppBarSeparator Grid.Column="2" Margin="10,0,10,0" />

                    <StackPanel
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(QueryLinksCollection.Count), Mode=OneWay}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryedAppType')}" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/NonPackagedApp')}"
                                Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsPackagedApp), Mode=OneWay}" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/PackagedApp')}"
                                Visibility="{x:Bind IsPackagedApp, Mode=OneWay}" />
                        </Grid>

                        <TextBlock Text="{x:Bind x:String.Format(QueryLinksCountInfoString, QueryLinksCollection.Count), Mode=OneWay}" />
                    </StackPanel>

                    <TextBlock
                        Grid.Column="4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/QueryLinksEmpty')}"
                        Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityReverseConvert(QueryLinksCollection.Count), Mode=OneWay}" />

                    <CommandBar
                        x:Name="NormalMode"
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelectMode), Mode=OneWay}">

                        <CommandBar.PrimaryCommands>
                            <AppBarButton Click="{x:Bind OnSelectClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Select')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE762;" />
                                </AppBarButton.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/SelectToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </AppBarButton>
                        </CommandBar.PrimaryCommands>
                    </CommandBar>

                    <CommandBar
                        x:Name="SelectMode"
                        Grid.Column="5"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                        <CommandBar.PrimaryCommands>
                            <AppBarButton Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyOptions')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE8C8;" />
                                </AppBarButton.Icon>

                                <AppBarButton.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem Click="{x:Bind OnCopySelectedLinkClicked}" Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopySelectedLink')}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopySelectedLinkToolTip')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>

                                        <MenuFlyoutItem Click="{x:Bind OnCopySelectedClicked}" Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopySelectedContent')}">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopySelectedContentToolTip')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </AppBarButton.Flyout>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyOptionsToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </AppBarButton>

                            <AppBarButton Click="{x:Bind OnDownloadSelectedClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/DownloadSelected')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE74B;" />
                                </AppBarButton.Icon>
                            </AppBarButton>

                            <AppBarButton Click="{x:Bind OnCancelClicked}" Label="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Cancel')}">

                                <AppBarButton.Icon>
                                    <FontIcon Glyph="&#xE711;" />
                                </AppBarButton.Icon>

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CancelToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </AppBarButton>
                        </CommandBar.PrimaryCommands>
                    </CommandBar>
                </Grid>

                <!--  查询链接结果列表  -->
                <ListView
                    Grid.Row="2"
                    CornerRadius="0"
                    IsItemClickEnabled="{x:Bind IsSelectMode, Mode=OneWay}"
                    ItemClick="{x:Bind OnItemClick}"
                    ItemsSource="{x:Bind QueryLinksCollection}"
                    SelectionMode="None"
                    Visibility="{x:Bind converter:ValueConverterHelper.IntToVisibilityConvert(QueryLinksCollection.Count), Mode=OneWay}">

                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource DefaultListViewItemStyle}" TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ItemsControl.ItemContainerTransitions>
                        <TransitionCollection />
                    </ItemsControl.ItemContainerTransitions>

                    <ListView.Header>
                        <Grid
                            Height="35"
                            Padding="6,0,0,0"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1,0,1,1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="SelectHeaderText"
                                Grid.Column="0"
                                Width="50"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                IsTapEnabled="{x:Bind IsSelectMode, Mode=OneWay}"
                                Tapped="{x:Bind OnSelectTapped}"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Select')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/SelectHeader')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileNameHeaderText"
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/FileName')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/FileName')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                        Visibility="{x:Bind FileNameHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                x:Name="FileSizeHeaderText"
                                Grid.Column="2"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/FileSize')}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/FileSize')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                        Visibility="{x:Bind FileSizeHeaderText.IsTextTrimmed, Mode=OneWay}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="3"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Options')}">

                                <ToolTipService.ToolTip>
                                    <ToolTip
                                        MaxWidth="9999"
                                        Background="Transparent"
                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/OptionsToolTip')}"
                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:QueryLinksModel">
                            <Grid
                                Height="35"
                                Padding="6,0,0,0"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1,0,1,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    Grid.Column="0"
                                    Width="50"
                                    MinWidth="0"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    IsChecked="{x:Bind IsSelected, Mode=OneWay}"
                                    IsThreeState="False"
                                    Visibility="{x:Bind IsSelectMode, Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Background="Transparent"
                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}">

                                            <Grid>
                                                <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/Selected')}" Visibility="{x:Bind IsSelected, Mode=OneWay}" />
                                                <TextBlock Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/UnSelected')}" Visibility="{x:Bind converter:ValueConverterHelper.BooleanToVisibilityReverseConvert(IsSelected), Mode=OneWay}" />
                                            </Grid>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </CheckBox>

                                <HyperlinkButton
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Command="{StaticResource DownloadCommand}"
                                    CommandParameter="{x:Bind}"
                                    IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}">

                                    <HyperlinkButton.Content>
                                        <TextBlock
                                            x:Name="FileNameText"
                                            Text="{x:Bind FileName}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind FileName}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                                    Visibility="{Binding ElementName=FileNameText, Path=IsTextTrimmed, Mode=OneWay}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </HyperlinkButton.Content>

                                    <HyperlinkButton.ContextFlyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem
                                                Command="{StaticResource CopyLinkCommand}"
                                                CommandParameter="{x:Bind FileLink}"
                                                IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                                Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyLink')}">

                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE8C8;" />
                                                </MenuFlyoutItem.Icon>

                                                <ToolTipService.ToolTip>
                                                    <ToolTip
                                                        MaxWidth="9999"
                                                        Background="Transparent"
                                                        Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyLinkToolTip')}"
                                                        Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                                </ToolTipService.ToolTip>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </HyperlinkButton.ContextFlyout>
                                </HyperlinkButton>

                                <TextBlock
                                    x:Name="FileSizeText"
                                    Grid.Column="2"
                                    MinWidth="50"
                                    Margin="10,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    IsTextSelectionEnabled="True"
                                    Text="{x:Bind FileSize}"
                                    TextAlignment="Left"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Background="Transparent"
                                            Content="{x:Bind FileSize}"
                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}"
                                            Visibility="{Binding ElementName=FileSizeText, Path=IsTextTrimmed, Mode=OneWay}" />
                                    </ToolTipService.ToolTip>
                                </TextBlock>

                                <HyperlinkButton
                                    Grid.Column="3"
                                    Margin="0,0,5,0"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Command="{StaticResource OpenLinkCommand}"
                                    CommandParameter="{x:Bind FileLink}"
                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/OpenLink')}"
                                    IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}">

                                    <ToolTipService.ToolTip>
                                        <ToolTip
                                            MaxWidth="9999"
                                            Background="Transparent"
                                            Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/OpenLinkToolTip')}"
                                            Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                    </ToolTipService.ToolTip>
                                </HyperlinkButton>

                                <Grid.ContextFlyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyoutItem
                                            Command="{StaticResource CopyInformationCommand}"
                                            CommandParameter="{x:Bind}"
                                            IsEnabled="{x:Bind IsSelectMode.Equals(x:False), Mode=OneWay}"
                                            Text="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyInformation')}">

                                            <MenuFlyoutItem.Icon>
                                                <FontIcon Glyph="&#xE8C8;" />
                                            </MenuFlyoutItem.Icon>

                                            <ToolTipService.ToolTip>
                                                <ToolTip
                                                    MaxWidth="9999"
                                                    Background="Transparent"
                                                    Content="{x:Bind rootservice:ResourceService.GetLocalized('QueryLinks/CopyInformationToolTip')}"
                                                    Loaded="{x:Bind backdrophelper:ToolTipBackdropHelper.OnLoaded}" />
                                            </ToolTipService.ToolTip>
                                        </MenuFlyoutItem>
                                    </MenuFlyout>
                                </Grid.ContextFlyout>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
